/** Implements hook_form_islandora_related_objects_form_alter() */
function islandora_bioinformatics_form_islandora_related_objects_form_alter(&$form, &$formstate){
  $form['next section'] = array(
    '#markup' => t("Alter all related objects forms.</br>"));

  $subject = islandora_object_load($formstate['islandora']['object']);
  $subject_id = str_replace(':', '_', $subject->models[0]);
  $object_id = str_replace(':', '_', $formstate['islandora']['cmodel']);

  $other_ids = array(
    "form_islandora_{$subject_id}_related_objects_form",
    "form_islandora_related_{$object_id}_objects_form",
    "form_islandora_{$subject_id}_related_{$object_id}_objects_form"
  );

  drupal_alter($other_ids, $form, $formstate);

}

