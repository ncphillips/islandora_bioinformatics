/**
 * Implements hook_islandora_related_objects_page_alter()
 *
 * Example.
 */
function islandora_bioinformatics_islandora_related_objects_page_alter(&$page, &$page_state){

  $page[] = array('#type' => 'markup', '#markup'=>t('Alter all related objects pages.</br>'));
  $count = 0;
  foreach($page_state['relationships'] as $rel){
    if($rel['object']['value'] == 'islandora:person_cmodel') {
      unset($page_state['relationships'][$count]);
    }
    $count++;
  }
//  unset($page_state['relationships'][0]);
}

